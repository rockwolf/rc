;; -*-lisp-*-
;;
;; Author: Andy Nagels
;; Date: 2018-04-14
;; StumWM configuration file.

(in-package :stumpwm)
(setf *default-package* :stumpwm)

;; Startup message
(setf *startup-message* nil)

;; Run a shell command
(run-shell-command "xsetroot -cursor_name left_ptr") ; Change X cursor to a left-pointer

(setf *mouse-focus-policy* :sloppy)

;; Load Mod4+ as modifier
(run-shell-command "xmodmap -e \"clear mod4\"")
(run-shell-command "xmodmap -e \"keycode 133 = F20\"")

;; Load modules
(load "~/.config/stumpwm/commands.lisp")
(load "~/.config/stumpwm/placement.lisp")
(load "~/.config/stumpwm/keybindings.lisp")
(load "~/.config/stumpwm/theme.lisp")
(load "~/.config/stumpwm/utilities.lisp")
(load "~/.config/stumpwm/modeline.lisp")
(when "initializing"
  (mode-line))

(setf *startup-message* "System ready.")
