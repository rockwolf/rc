!-- To reload changes: xrdb -merge ~/.Xresources and start a new rxvt-unicode

!-- font
!*font: xft:Liberation Mono:pixelsize=12
*xftAntialias: true
*font: xft:inconsolata:pixelsize=18:antialias=true:hinting=true, xft:Liberation Mono:pixelsize=13:antialias=true,hinting=true
*boldFont: xft:inconsolata:bold:pixelsize=18:antialias=true:hinting=true, xft:Liberation Mono:pixelsize=13:antialias=true,hinting=true
*italicFont: xft:inconsolata:italic:pixelsize=18:antialias=true:hinting=true, xft:Liberation Mono:pixelsize=13:antialias=true,hinting=true
*bolditalicFont: xft:inconsolata:bold:italic:pixelsize=18:antialias=true:hinting=true, xft:Liberation Mono:pixelsize=13:antialias=true,hinting=true

!-- term behaviour
*saveLines:3600
*scrollBar: false

!-- helps to not break urls in irssi
*cutchars: "\"()'*<>[]{|}"
!-- and launch them:
*perl-lib: /usr/lib/urxvt/perl
*perl-ext-common: default,matcher
*matcher.button: 1
*urlLauncher: /usr/bin/firefox

!-- transparency
!-- note: transparency is not good for the eyes and works against these main solarized colors
*fading: 10
*transparent: true
*shading: 80

!-- colorscheme
